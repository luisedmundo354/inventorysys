<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4 text-left">
    <h1>Suppliers</h1>
  </div>

  <div class="col-md-4 offset-md-4 text-right">
    <%= link_to '<i class="fa fa-plus fa-3x"></i>'.html_safe, new_supplier_path %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Prone</th>
      <th scope="col">Address</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplier_items.each do |supplier_items| %>
      <tr>
        <td><%= supplier_items.name %></td>
        <td><%= supplier_items.phone %></td>
        <td><%= supplier_items.address %></td>
        <td><%= link_to 'Show', supplier_items %></td>
        <td><%= link_to "Edit", edit_supplier_path(supplier_items) %></td>
        <td><%= link_to 'Destroy', supplier_path(supplier_items), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
