<h1>Create a new Supplier</h1>

<%= form_with(model: @supplier, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :supplier_name %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :supplier_phone %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :supplier_address %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
