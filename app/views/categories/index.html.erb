<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<%= link_to 'New Category', new_category_path %>

<table class="pure-table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_items.each do |category_items| %>
      <tr>
        <td><%= category_items.name %></td>
        <td><%= link_to 'Show', category_items %></td>
        <td><%= link_to "Edit", edit_category_path(category_items) %></td>
        <td><%= link_to 'Destroy', category_path(category_items), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
