<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4 text-left">
    <h1>Purchase orders</h1>
  </div>

  <div class="col-md-4 offset-md-4 text-right">
    <%= link_to '<i class="fa fa-plus fa-3x"></i>'.html_safe, new_purchase_order_path %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Comment</th>
      <th scope="col">Customer</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_order_item.each do |purchase_orders| %>
      <tr>
        <td><%= purchase_orders.number %></td>
        <td><%= purchase_orders.comment %></td>
        <td><%= purchase_orders.replenisher.fname %></td>
        <td><%= link_to 'Show', purchase_orders %></td>
        <td><%= link_to "Edit", edit_purchase_order_path(purchase_orders) %></td>
        <td><%= link_to 'Destroy', purchase_order_path(purchase_orders), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
