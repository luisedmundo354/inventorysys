<h1>Create a new Customer</h1>

<%= form_with(model: @customer, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :fname %>
    <%= form.text_field :fname, id: :customer_fname, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :lname %>
    <%= form.text_field :lname, id: :customer_lname, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :customer_email, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :customer_phone, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :dni %>
    <%= form.text_field :dni, id: :customer_dni, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit :class=>"btn btn-primary"%>
  </div>
<% end %>
