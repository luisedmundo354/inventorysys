<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4 text-left">
    <h1><%=t('Customers')%></h1>
  </div>

  <div class="col-md-4 offset-md-4 text-right">
    <%= link_to '<i class="fa fa-plus fa-3x"></i>'.html_safe, new_customer_path %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%=t('first_name')%></th>
      <th scope="col"><%=t('last_name')%></th>
      <th scope="col"><%=t('Email')%></th>
      <th scope="col"><%=t('Phone')%></th>
      <th scope="col"><%=t('DNI')%></th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer.each do |customer_items| %>
      <tr>
        <td><%= customer_items.fname %></td>
        <td><%= customer_items.lname %></td>
        <td><%= customer_items.email %></td>
        <td><%= customer_items.phone %></td>
        <td><%= customer_items.dni %></td>
        <td><%= link_to t('Show'), customer_items, class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to t('Edit'), edit_customer_path(customer_items), class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to t('Destroy'), customer_path(customer_items), method: :delete, data: { confirm: t('Are you sure?')}, class: "btn btn-outline-dark btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
