<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-4 text-left">
      <h1><%= t('Products') %></h1>
    </div>

    <div class="col-md-4 offset-md-4 text-right">
      <%= link_to '<i class="fa fa-plus fa-3x"></i>'.html_safe, new_product_path %>
    </div>
  </div>

<ul class="nav nav-tabs">
  <% @category_items.each do |category_items| %>
  <li class="nav-item"><%= link_to category_items.category.name, products_path(:category=>category_items.category_id), class: "nav-link"%></li>
  <% end %>
</ul>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%=t('Name')%></th>
        <th scope="col"><%=t('Brand')%></th>
        <th scope="col"><%=t('Unit')%></th>
        <th scope="col"><%=t('Stock')%></th>
        <th scope="col"><%=t('SS')%></th>
        <th scope="col"><%=t('Deliver_time')%></th>
        <th scope="col"><%=t('Order_size')%></th>
        <th scope="col"><%=t('Supplier')%></th>
        <th scope="col"><%=t('Phone')%></th>
        <th scope="col"><%=t('Address')%></th>
        <th scope="col"><%=t('Level')%></th>
        <th scope="col"><%=t('Category')%></th>
        <th colspan="3"  scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @product_items.each do |product_items|%>
      <tr class="<%= row_class(product_items.level) %>">
        <td><%= product_items.name %></td>
        <td><%= product_items.brand %></td>
        <td><%= product_items.unit %></td>
        <td><%= product_items.stock %></td>
        <td><%= product_items.ss %></td>
        <td><%= product_items.deliver_time %></td>
        <td><%= product_items.order_size %></td>
        <td><%= product_items.supplier.name %></td>
        <td><%= product_items.supplier.phone %></td>
        <td><%= product_items.supplier.address %></td>
        <td><%= product_items.level %></td>
        <td><%= product_items.category.name %></td>
        <td><%= link_to t('Show'), product_items %></td>
        <td><%= link_to t('Edit'), edit_product_path(product_items) %></td>
        <td><%= link_to "", product_path(product_items), method: :delete, data: { confirm: t('Are you sure?') }, class: "fa fa-close" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <p><%= link_to t('Generate list'), list_items_path(@list_items, :format => :pdf), class: "btn btn-primary" %></p>
</div>
