<p id="notice"><%= notice %></p>

<h1><%= @sale_order.number %></h1>

<ul>
  <li><span><%=t('Comment')%>: </span><%= @sale_order.comment %></li>

  <li><span><%=t('Customer')%>: </span><%= @sale_order.customer.fname %></li>
</ul>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%=t('Items')%></th>
      <th scope="col"><%=t('Quantity')%></th>
      <th scope="col"><%=t('Price')%></th>
    </tr>
  </thead>
  <tbody>
  <% @sale_items.each do |sale_item|%>
  <tr>
    <td><%= sale_item.product.name %></td>
    <td><%= sale_item.quantity %></td>
    <td><%= sale_item.price %></td>
  </tr>
  <%end%>
  <tbody>
</table>

<p><%= link_to t('Return Home'), sale_orders_path %></p>
