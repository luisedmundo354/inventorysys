<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4 text-left">
    <h1>Sale orders</h1>
  </div>

  <div class="col-md-4 offset-md-4 text-right">
    <%= link_to '<i class="fa fa-plus fa-3x"></i>'.html_safe, new_sale_order_path %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Comment</th>
      <th scope="col">Customer</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_order_item.each do |sale_orders| %>
      <tr>
        <td><%= sale_orders.number %></td>
        <td><%= sale_orders.comment %></td>
        <td><%= sale_orders.customer.fname %></td>
        <td><%= link_to 'Show', sale_orders %></td>
        <td><%= link_to "Edit", edit_sale_order_path(sale_orders) %></td>
        <td><%= link_to 'Destroy', sale_order_path(sale_orders), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
