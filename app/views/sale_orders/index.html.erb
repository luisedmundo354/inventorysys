<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4 text-left">
    <h1><%= t('Sale orders') %></h1>
  </div>

  <div class="col-md-4 offset-md-4 text-right">
    <%= link_to '<i class="fa fa-plus fa-3x"></i>'.html_safe, new_sale_order_path %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%=t('Number')%></th>
      <th scope="col"><%=t('Comment')%></th>
      <th scope="col"><%=t('Customer')%></th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_order_item.each do |sale_orders| %>
      <tr>
        <td><%= sale_orders.number %></td>
        <td><%= sale_orders.comment %></td>
        <td><%= sale_orders.customer.fname %></td>
        <td><%= link_to t('Show'), sale_orders %></td>
        <td><%= link_to t('Edit'), edit_sale_order_path(sale_orders) %></td>
        <td><%= link_to t('Destroy'), sale_order_path(sale_orders), method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
